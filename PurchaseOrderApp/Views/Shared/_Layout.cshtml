<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PurchaseOrderApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PurchaseOrderApp.styles.css" asp-append-version="true" />
</head>
<body>
    
    <header>
        <nav class=" navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 ">
        <ul class="new-style navbar-nav">
            <li class="nav-item">
                <a class="menu-item nav-link text-light" asp-controller="Home" asp-action=""> Home</a>
            </li>
            <li class="nav-item"> 
                <a class="menu-item nav-link text-light" asp-controller="PurchaseOrders" asp-action=""> View All Purchase Orders </a>
            </li>
        </ul>
        </nav>
    </header>
    

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    </body>

    <footer class=" text-center text-white" > 
        <div class="container p-4">
            <div class="text-center p-3"></div>
            <p>&copy; 2022 - Purchase Order App by Nisso Podolyak </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</html>